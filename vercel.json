{
  "installCommand": "npm install",
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "apps/web/dist",
  "framework": null,
  "rewrites": [
    { "source": "^/api/(.*)$", "destination": "/api?path=$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/index.js": {
      "runtime": "@vercel/node@3",
      "maxDuration": 30
    }
  }
}
