# Core
APP_NAME=HFR_PPE_SYSTEM
APP_ENV=development
APP_PORT=4000
APP_WEB_URL=http://localhost:3000
APP_API_URL=http://localhost:4000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hfr_ppe
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Auth
JWT_ACCESS_SECRET=change_this_access_secret
JWT_REFRESH_SECRET=change_this_refresh_secret
JWT_ACCESS_TTL_MINUTES=15
JWT_REFRESH_TTL_DAYS=14
PASSWORD_MIN_LENGTH=10

# WhatsApp Integration (example provider)
WHATSAPP_PROVIDER=twilio
WHATSAPP_ACCOUNT_SID=
WHATSAPP_AUTH_TOKEN=
WHATSAPP_FROM_NUMBER=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# Link Signing
SIGNING_LINK_BASE_URL=http://localhost:3000/sign
SIGNING_LINK_TTL_HOURS=72
SIGNING_MAX_ATTEMPTS=5

# Notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=no-reply@hfr.example

# File Storage
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./storage
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=
STORAGE_S3_ACCESS_KEY=
STORAGE_S3_SECRET_KEY=

# Audit and Security
AUDIT_RETENTION_DAYS=2555
LOGIN_MAX_ATTEMPTS=5
LOCKOUT_MINUTES=30
SESSION_IDLE_TIMEOUT_MINUTES=30

# Scheduler
CRON_REORDER_CHECK=0 6 * * *
CRON_EXPIRY_REMINDER=0 7 * * *
